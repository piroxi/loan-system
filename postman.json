{
  "info": {
    "_postman_id": "your-id-here",
    "name": "Loan Service API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User",
      "item": [
        {
          "name": "Signin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/users/signin",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "users", "signin"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user1\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.token) {",
                  "  pm.environment.set(\"token\", jsonData.data.token);",
                  "} else {",
                  "  pm.environment.unset(\"token\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Loans",
      "item": [
        {
          "name": "Create Loan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/loans/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "loans", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"principal\": 5000000,\n  \"rate\": 5,\n  \"roi\": 7\n}"
            }
          }
        },
        {
          "name": "Get Loan by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/loans/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "loans", "1"]
            }
          }
        },
        {
          "name": "Reject Loan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/loans/reject",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "loans", "reject"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"loan_id\": 1,\n  \"reject_reason\": \"Incomplete documents\"\n}"
            }
          }
        },
        {
          "name": "Approve Loan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/loans/approve",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "loans", "approve"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"loan_id\": 1,\n  \"photo_url\": \"http://example.com/photo.jpg\"\n}"
            }
          }
        },
        {
          "name": "Add Investment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/loans/invest",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "loans", "invest"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"loan_id\": 1,\n  \"amount\": 1000000\n}"
            }
          }
        },
        {
          "name": "Disburse Loan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/loans/disburse",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "loans", "disburse"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"loan_id\": 1,\n  \"signed_agreement_url\": \"http://example.com/agreement.pdf\"\n}"
            }
          }
        }
      ]
    }
  ]
}
